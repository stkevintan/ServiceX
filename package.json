{
  "name": "servicex",
  "version": "1.0.0",
  "description": "serviceX is a state management solution for react",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "esnext": "esnext/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "parcel ./demo/index.html",
    "build": "yarn build:es5 & yarn build:esm & yarn build:next",
    "build:es5": "rimraf ./dist && tsc -p ./tsconfig.build.json",
    "build:esm": "rimraf ./esm && tsc -p ./tsconfig.build.json -m esnext --outDir esm",
    "build:next": "rimraf ./esnext && tsc -p ./tsconfig.build.json --target esnext --outDir esnext",
    "prettier": "prettier '@(src|demo)/**/*.@(ts|tsx|html|less)' --write",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "lint:tsc": "tsc -p ./tsconfig.json --noEmit",
    "test": "jest --collectCoverage"
  },
  "keywords": [
    "react",
    "state"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:eslint",
      "git add"
    ],
    "*.{less,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Kevin Tan",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.0",
    "immer": "^3.1.3",
    "inversify": "^5.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "jest": "^24.8.0",
    "less": "^3.9.0",
    "lint-staged": "^9.0.2",
    "parcel": "^1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "immer": "^3.1.2",
    "react": "^16.8.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0"
  }
}
